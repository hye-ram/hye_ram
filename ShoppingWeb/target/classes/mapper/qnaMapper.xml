<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna">
	<!-- 01. 게시글 전체 목록 조회 -->
	<select id="qnalistAll"
		resultType="com.project.shoppingweb.bean.qnaDTO">
		SELECT
		*
		<!-- viewcnt -->
		FROM
		qna
		ORDER BY
		bno desc,
		regdate desc
	</select>
	<!-- 02. 게시글 작성 -->
	<insert id="qnainsert">
		INSERT INTO qna (
		bno,
		title,
		editor,
		writer,
		regdate,
		product_id
		) VALUES (
		null,
		#{title},
		#{editor},
		#{writer},
		now()
		<if test="product_id neq 'undefined'">
			, #{product_id}
		</if>
		<if test="product_id eq 'undefined'">
			,0
		</if>

		)
	</insert>
	<!--03. 게시글 상세보기 조회 -->
	<select id="view"
		resultType="com.project.shoppingweb.bean.qnaDTO">
		SELECT * FROM qna
		WHERE bno = #{bno}
	</select>
	<!--04. 업뎃 페이지 상세보기 조회 -->
	<select id="update"
		resultType="com.project.shoppingweb.bean.qnaDTO">
		SELECT * FROM qna
		WHERE bno = #{bno}
	</select>
	<!-- 05. 게시글 수정처리 -->
	<update id="updateArticle">
		UPDATE qna SET
		title = #{title},
		editor = #{editor},
		writer = #{writer},
		regdate = now()
		WHERE bno = #{bno}
	</update>
	<!-- 06. 게시글 삭제처리 -->
	<delete id="deleteArticle">
		DELETE FROM qna
		WHERE bno = #{bno}
	</delete>


	<!--03. 제품 상세보기에서 해당 리뷰 조회 -->
	<select id="qna_product"
		resultType="com.project.shoppingweb.bean.qnaDTO">
		SELECT * FROM qna
		WHERE product_id = #{product_id}
	</select>
</mapper>
