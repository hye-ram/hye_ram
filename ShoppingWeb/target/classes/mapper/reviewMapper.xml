<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">
    <!-- 01. 게시글 전체 목록 조회 -->
    <select id="reviewlistAll" resultType="com.project.shoppingweb.bean.reviewDTO">
        SELECT 
            bno, 
            title, 
            editor, 
            writer,
            regdate 
            <!-- viewcnt  -->
        FROM 
            review
        ORDER BY 
            bno desc, 
            regdate desc
    </select>
    <!-- 02. 게시글 작성 -->
    <insert id="reinsert">
        INSERT INTO review (
          bno, 
          title, 
          editor, 
          writer,
          regdate
        ) VALUES (
          null,
          #{title},
          #{editor},
          #{writer},
          now()
        )

    </insert>
    <!--03. 게시글 상세보기 조회 -->
    <select id="view" resultType="com.project.shoppingweb.bean.reviewDTO">
        SELECT * FROM review 
        WHERE bno = #{bno}
    </select>
    <!-- 05. 게시글 수정처리 -->
    <update id="updateArticle">
        UPDATE review SET
            title = #{title},
            content = #{editor},
            writer = #{writer},
            regdate = now()
        WHERE bno = #{bno}
    </update>
    <!-- 06. 게시글 삭제처리 -->
    <delete id="deleteArticle">
        DELETE FROM review
        WHERE bno = #{bno}
    </delete>


</mapper>
